<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="qmui_status_bar">@color/statusBarColor</item>
        <item name="qmui_color_primary">@color/colorPrimary</item>
        <item name="qmui_color_dark_primary">@color/colorPrimaryDark</item>
        <item name="qmui_color_accent">@color/colorAccent</item>
        <item name="qmui_text_color_primary">@color/textColorPrimary</item>
        <item name="qmui_text_color_secondary">@color/colorSecondaryText</item>


        <!--qmui_config_color_blue这个是通知栏的颜色,因为在QMUI.Compat的parent中的colorPrimaryDark引用的是qmui_config_color_blue-->
        <item name="qmui_config_color_blue">@color/colorTopbarAndNotificationBar</item>

        <item name="qmui_topbar_title_color">@color/colorTopbarText</item>
        <item name="qmui_topbar_subtitle_color">@color/colorTopbarText</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/colorTopbarText</item>
        <item name="qmui_topbar_height">56dp</item>
        <item name="qmui_topbar_image_btn_height">48dp</item>
        <item name="qmui_content_spacing_horizontal">20dp</item>
        <item name="qmui_content_padding_horizontal">@dimen/qmui_content_spacing_horizontal</item>

        <item name="QMUITopBarStyle">@style/QDTopBar</item>

        <!-- 配置app自己的theme -->
        <item name="app_primary_color">@color/colorPrimary</item>
        <item name="app_content_bg_color">@color/qmui_config_color_white</item>
        <item name="qmui_round_btn_text_color">@color/textColorPrimary</item>
    </style>
    <style name="ButtonBase.Compat" parent="@style/Widget.AppCompat.Button" >
        <!-- 取消 Button 字符默认大写的功能（会导致 Spannable 失效），默认值只影响 5.0 以上版本，但使用Compat包后，4.x 版本也会受到影响 -->
        <!-- http://stackoverflow.com/questions/29007746/button-settext-with-spannable-dosent-work-for-android-5-0-lollipop -->
        <item name="android:textAllCaps">false</item>
        <!--<item name="android:background">@drawable/recycler_bg</item>-->
        <item name="android:textColor">@drawable/btn_color</item>
    </style>


    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">@color/colorTopbarAndNotificationBar</item>
    </style>

    <style name="LibAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="EditTextUnder" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="apmDetailRelative">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/recycler_bg</item>
    </style>

    <style name="mineRelativelo">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.Widget.Design.TabLayout.TabText"  parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="mineItemLO">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:height">48dp</item>
        <item name="android:background">@drawable/recycler_bg</item>
    </style>

    <style name="nameCardRelativelo">
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/recycler_bg</item>
    </style>

    <style name="tagStyle">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension"/>
        <attr name="sl_shadowRadius" format="dimension"/>
        <attr name="sl_shadowColor" format="color"/>
        <attr name="sl_dx" format="dimension"/>
        <attr name="sl_dy" format="dimension"/>
    </declare-styleable>

</resources>
