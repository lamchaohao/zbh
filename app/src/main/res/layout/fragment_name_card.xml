<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/widget_topbar"/>

    <RelativeLayout
        style="@style/nameCardRelativelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="头像"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_userPic"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_person_primary_700_36dp"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_userName"
        style="@style/nameCardRelativelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="用户名"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
        <TextView
            android:id="@+id/tv_userName_mine"
            android:text="张小明"
           android:layout_toLeftOf="@id/arrow2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/nameCardRelativelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="当前公司"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_companyName"
            android:text="我的公司"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/nameCardRelativelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="部门"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_name_depart"
            android:text="部门1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/nameCardRelativelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="职务"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_name_position"
            android:text="产品经理"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_quit_company"
        android:text="退出当前企业"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>