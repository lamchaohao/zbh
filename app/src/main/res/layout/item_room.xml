<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_root"
    android:background="@drawable/recycler_bg"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="128dp">

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/iv_room"
        android:src="@mipmap/ic_launcher"
        android:layout_width="96dp"
        android:layout_height="96dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="会议室名称"/>
        <TextView
            android:id="@+id/tv_capcity_room"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="坐席20人"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag1_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_yellow"
                style="@style/tagStyle"
                android:textColor="#ffba00"
                android:visibility="gone"
                android:text="投影仪"/>

            <TextView
                android:id="@+id/tv_tag2_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_red"
                style="@style/tagStyle"
                android:textColor="#f7a9d9"
                android:visibility="gone"
                android:text="白板"/>

            <TextView
                android:id="@+id/tv_tag3_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_blue"
                style="@style/tagStyle"
                android:textColor="#44a7db"
                android:visibility="gone"
                android:text="投影仪"/>

            <TextView
                android:id="@+id/tv_tag4_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_green"
                style="@style/tagStyle"
                android:textColor="#67cf0b"
                android:visibility="gone"
                android:text="投影仪"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_apply"
        android:text="审核"
        android:textSize="10sp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>