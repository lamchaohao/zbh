<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="3dp"
    android:id="@+id/item_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_room"
            android:src="@mipmap/ic_launcher"
            android:layout_width="96dp"
            android:layout_height="96dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议室名称"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_capcity_room"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person_primary_24dp"
                    android:text="20人"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tag1_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="#EEEEEE"
                    android:padding="3dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="投影仪"/>

                <TextView
                    android:id="@+id/tv_tag2_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="#EEEEEE"
                    android:padding="3dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="白板"/>

                <TextView
                    android:id="@+id/tv_tag3_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="#EEEEEE"
                    android:padding="3dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="投影仪"/>

                <TextView
                    android:id="@+id/tv_tag4_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="#EEEEEE"
                    android:padding="3dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:text="投影仪"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>