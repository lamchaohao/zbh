<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/backgroudColor"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <include layout="@layout/widget_topbar"/>

    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_newPhone"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </FrameLayout>
        <LinearLayout
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_checkcode"
                android:hint="请输入验证码"
                android:layout_weight="1"
                android:inputType="number"
                android:padding="8dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/btn_getCheckCode"
                android:text="获取验证码"
                android:textColor="#0090DB"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@drawable/btn_blue_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:text="下一步"
        android:enabled="false"
        android:layout_margin="16dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_btn_round_conner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>