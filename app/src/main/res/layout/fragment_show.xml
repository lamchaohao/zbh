<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.gzz100.zbh.home.meetingadmin.fragment.ShowFragment">

    <com.gzz100.zbh.widget.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <ImageView
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_catalog_switch"
                android:src="@drawable/ic_menu_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:id="@+id/ll_browse_file"
                android:background="@drawable/recycler_bg"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_file"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览文件..."/>
                <ImageView
                    android:src="@drawable/ic_triangle_down"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/btRotation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/recycler_bg"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:src="@drawable/ic_rotation"/>


        </LinearLayout>
    </com.gzz100.zbh.widget.ShadowLayout>


    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.tencent.smtt.sdk.WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:id="@+id/fl_showMask"
            android:background="#48FAFAFA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_content"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/fl_no_file_tips"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/pic_empty_file"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>



    </FrameLayout>


</LinearLayout>
