<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/recycler_bg"
              tools:context=".home.appointment.fragment.ApmDetailFragment">

    <include layout="@layout/widget_topbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider"
            android:dividerPadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/item_room"/>
            <TextView
                android:text="@string/meeting_time_tips"
                android:textSize="10sp"
                android:textColor="#89000000"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="34dp"
                    android:background="@color/colorGray"
                    android:id="@+id/rcv_apm_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.qmuiteam.qmui.widget.QMUITabSegment
                    android:id="@+id/tabs_apm_detail"
                    android:layout_width="match_parent"
                    android:background="?attr/qmui_list_item_bg_with_border_top"
                    android:layout_height="@dimen/home_tab_height"
                    android:layout_gravity="top"
                    android:textSize="18sp"
                    app:qmui_tab_icon_position="top"/>
            </FrameLayout>


            <LinearLayout
                android:orientation="horizontal"
                style="@style/apmDetailRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="会议时间"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_date_detail"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_time_detail"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_time_howlong"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--<com.gzz100.zbh.widget.DividerView-->
                <!--android:paddingLeft="16dp"-->
                <!--android:paddingRight="16dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"/>-->
            <LinearLayout
                style="@style/apmDetailRelative"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="会议主题"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/et_meetingName_detail"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:hint="请输入本次会议主题"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_nameCount_detail"
                    android:text="0/30"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <include layout="@layout/part_meeting_info"/>
            <Button
                android:id="@+id/bt_next_detail"
                android:textColor="@color/colorWhite"
                android:text="发起会议"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/bg_btn_round_conner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
