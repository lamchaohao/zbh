<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/backgroudColor"
             tools:context="com.gzz100.zbh.home.mine.SetPhoneFragment">

    <include layout="@layout/widget_topbar"/>

    <RelativeLayout
        android:id="@+id/rl_currentphone"
        style="@style/apmDetailRelative"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="当前手机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_currentPhone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_setphone"
        style="@style/apmDetailRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="绑定新手机"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/et_currentPsw"
        android:visibility="gone"
        android:hint="请输入当前密码"
        android:background="@null"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_next"
        android:text="下一步"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_btn_round_conner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
