<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_catalog_switch"
            android:src="@drawable/ic_menu_primary_24dp"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btFile"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/ic_file"
            android:text="浏览文件"/>

        <Button
            android:id="@+id/bthost"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/ic_host_microphone"
            android:text="主持人"/>

        <ImageView
            android:id="@+id/btRotation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/recycler_bg"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:src="@drawable/ic_rotation"/>

        <ImageView
            android:id="@+id/btpause"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/recycler_bg"
            android:layout_gravity="center"
            android:src="@drawable/ic_pause"/>

        <ImageView
            android:id="@+id/iv_color_piker"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/recycler_bg"
            android:layout_gravity="center"
            android:src="@drawable/ic_color_lens_cyan_400_24dp"/>

        <Switch
            android:id="@+id/swc_zoom_edit"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/recycler_bg"
            android:layout_gravity="center"
            android:thumb="@drawable/switch_edit_thumb_selector"
            android:track="@drawable/switch_edit_track_selector" />

        <ImageView
            android:id="@+id/iv_clear_path"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/recycler_bg"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete_forever_red_500_36dp"/>

        <TextView
            android:id="@+id/tv_loginStatu"
            android:text="unkwon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
</HorizontalScrollView>