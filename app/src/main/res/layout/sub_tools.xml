<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btFile"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/ic_insert_drive_file_black_24dp"
            android:text="浏览文件"/>

        <Button
            android:id="@+id/bthost"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recycler_bg"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:text="主持人"/>

        <ImageView
            android:id="@+id/btRotation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/recycler_bg"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:src="@drawable/ic_screen_rotation_black_24dp"/>

        <ImageView
            android:id="@+id/btpause"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/recycler_bg"
            android:layout_gravity="center"
            android:src="@drawable/ic_pause_circle_filled_black_24dp"/>

        <ImageView
            android:id="@+id/ivEdit"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/recycler_bg"
            android:layout_gravity="center"
            android:src="@drawable/ic_mode_edit_black_24dp"/>

    </LinearLayout>
</HorizontalScrollView>